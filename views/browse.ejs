<%-include("partials/header")-%>


<h1 class="display-4">Browse Available Contracts</h1>
<h2> Welcome, <%= userID %></h2>

<table class="table table-hover table-sm">
    <thead>
<tr>
    <th>Submitted By</th>
    <th>Description</th>
    <th>Type</th>
    <th>Create Date</th>
    <th>Value</th>
    <th>claim</th>
</tr>
</thead>
<tbody>
<% for( let index = 0; index < contracts.length; index++ ) { %>
    <tr>
        <td><%= contracts[index].originator %></td>
        <td><%= contracts[index].title %></td>
        <td><%= contracts[index].type %></td>
        <td><%= contracts[index].startDate %></td>
        <td><%= contracts[index].value %></td>
        <td><form action="/contract/claim/<%=contracts[index]._id%>" method="post"><button type="submit" class="btn btn-secondary" href=>claim</button></form></td>
    </tr>
<% } %>
</tbody>
</table>
<hr>
<h1 class="display-4">Assigned Contracts</h1>

<table class="table table-hover table-sm">
    <thead>
<tr>
    <th>Submitted By</th>
    <th>Description</th>
    <th>Type</th>
    <th>Create Date</th>
    <th>Value</th>
    <th>claim</th>
</tr>
</thead>
<tbody>
<% for( let index = 0; index < myContracts.length; index++ ) { %>
    <tr>
        <td><%= myContracts[index].originator %></td>
        <td><%= myContracts[index].title %></td>
        <td><%= myContracts[index].type %></td>
        <td><%= myContracts[index].startDate %></td>
        <td><%= myContracts[index].value %></td>
        <td><form action="/contract/accept/<%=myContracts[index]._id%>" method="post"><button type="submit" class="btn btn-secondary" href=>accept</button></form></td>
    </tr>
<% } %>
</tbody>
</table>
<hr>
<h1 class="display-4">Submitted Contracts</h1>

<table class="table table-hover table-sm">
    <thead>
<tr>
    <th>Recipient</th>
    <th>Description</th>
    <th>Type</th>
    <th>Create Date</th>
    <th>Value</th>
</tr>
</thead>
<tbody>
<% for( let index = 0; index < subedContracts.length; index++ ) { %>
    <tr>
        <td><%= subedContracts[index].recipient %></td>
